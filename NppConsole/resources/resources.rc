// resources.rc

#include <windows.h>
#include "../include/resources.hxx"

/////////////////////////////////////////////////////////////////////////////
//
// Version
//

1 VERSIONINFO
 FILEVERSION VER_MAJOR,VER_MINOR,VER_RELEASE,VER_BUILD
 PRODUCTVERSION VER_MAJOR,VER_MINOR,VER_RELEASE,VER_BUILD
 FILEFLAGSMASK 0x3fL
#ifdef _DEBUG
 FILEFLAGS 0x1L
#else
 FILEFLAGS 0x0L
#endif
 FILEOS 0x40004L
 FILETYPE 0x2L
 FILESUBTYPE 0x0L
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "000004b0"
        BEGIN
            VALUE "CompanyName", "Free software"
            VALUE "FileDescription", "Notepad++ console plugin."
            VALUE "FileVersion", VER_STRING
            VALUE "InternalName", "NppConsole"
            VALUE "LegalCopyright", "(C)2012 Mykhajlo Pobojnyj"
            VALUE "OriginalFilename", "NppConsole.dll"
            VALUE "ProductName", "Notepad++ console plugin."
            VALUE "ProductVersion", VER_STRING
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0, 1200
    END
END

// Application manifest.
CREATEPROCESS_MANIFEST_RESOURCE_ID RT_MANIFEST "NppConsole.manifest"

// Application icon.
IDI_APPICON             ICON                    "NppConsole.ico"

/////////////////////////////////////////////////////////////////////////////
//
// About Dialog
//

IDD_DIALOG_ABOUT DIALOG DISCARDABLE  0, 0, 315, 190
STYLE DS_SYSMODAL | DS_SETFOREGROUND | DS_FIXEDSYS | DS_CENTER | DS_CENTERMOUSE | WS_CAPTION | WS_SYSMENU
CAPTION "NppConsole Settings"
FONT 8, "MS Shell Dlg"
BEGIN
    DEFPUSHBUTTON   "OK",IDOK,205,170,50,14
    EDITTEXT        IDC_EDIT_ABOUT,6,4,302,92,ES_MULTILINE | ES_AUTOHSCROLL | ES_READONLY
    LTEXT           "Commad to run: ",IDC_STATIC,8,103,54,8
    EDITTEXT        IDC_EDIT_CMD,136,99,172,12,ES_AUTOHSCROLL
    LTEXT           "Line number pattern after file name: ",IDC_STATIC,8,117,117,8
    EDITTEXT        IDC_EDIT_LINE,136,113,172,12,ES_AUTOHSCROLL
    GROUPBOX        "Ctrl+C handling",IDC_STATIC,6,132,302,34
    CONTROL         "Ignore",IDC_RADIO_IGN,"Button",BS_AUTORADIOBUTTON | WS_GROUP,16,146,39,10
    CONTROL         "Restart console",IDC_RADIO_RESTR,"Button",BS_AUTORADIOBUTTON,85,146,69,10
    CONTROL         "Process normally",IDC_RADIO_PROCESS,"Button",BS_AUTORADIOBUTTON,184,146,79,10
    PUSHBUTTON      "Apply",IDC_BUTTON_APPLY,258,170,50,14
END


